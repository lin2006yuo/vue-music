
border-1px($color)
    position relative
    &:after
        display block
        position absolute
        left 0
        bottom 0
        width 100%
        border-top: 1px solid $color
        content: ''

clearfix()
    *zoom 1
    &::after
        content ''
        display block
        clear both

bg-image($url)
    background-image: url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
        background-image: url($url + "@3x.png")

no-wrap()
    text-overflow: ellipsis
    white-space nowrap

//扩展小图标点击区域
extend-click()
    position relative
    &:before
        content ''
        position absolute
        top -10px
        left -10px
        bottom -10px
        right -10px


